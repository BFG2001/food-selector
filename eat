        let intervalId;
        const result = document.getElementById('result');
        const startBtn = document.getElementById('startBtn');
        const stopBtn = document.getElementById('stopBtn');
        const title = document.getElementById('title');

        function getCurrentMeal() {
            const now = new Date();
            const hours = now.getHours();
            return (hours < 14) ? 
                { type: "åˆé¤ğŸ±", foods: lunchFoods } : 
                { type: "æ™šé¤ğŸ½ï¸", foods: dinnerFoods };
        }

        function updateTitle() {
            const meal = getCurrentMeal();
            title.innerHTML = `${meal.type}å¤§ä½œæˆ˜ï¼${meal.type.includes("åˆ") ? "â˜€ï¸" : "ğŸŒ™"}`;
            return meal.foods;
        }

        function startRandom() {
            const foods = updateTitle();
            startBtn.style.display = 'none';
            stopBtn.style.display = 'inline-block';
            
            intervalId = setInterval(() => {
                const randomIndex = Math.floor(Math.random() * foods.length);
                result.innerHTML = `<span style="color:hsl(${Math.random()*360},100%,50%)">${foods[randomIndex]}</span>`;
            }, 10); // è¶…é«˜é€Ÿåˆ‡æ¢ï¼ˆ10msï¼‰
        }

        function stopRandom() {
            clearInterval(intervalId);
            startBtn.style.display = 'inline-block';
            stopBtn.style.display = 'none';
            result.style.animation = 'none';
            void result.offsetWidth; // è§¦å‘é‡ç»˜
            result.style.animation = 'flash 0.5s';
